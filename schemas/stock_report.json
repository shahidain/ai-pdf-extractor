{
	"type": "object",
	"properties": {
		"firstPage": {
			"type": "object",
			"properties": {
				"reportType": {
					"type": "string",
					"enum": ["Company Update", "Company Note", "Initiation Report"]
				},
				"reportDate": {
					"type": "string",
					"format": "date"
				},
				"reportTitle": {
					"type": "string"
				},
				"bloombergCode": {
					"type": "string"
				},
				"companyName": {
					"type": "string"
				},
				"targetPrice": {
					"type": "number",
					"description": "The target price set by the analyst for the stock. This is a numeric value representing the expected future price of the stock. should be on first page with label 'Target peice'"
				},
				"marketPrice": {
					"type": "number",
					"description": "The current market price of the stock at the time of the report. This is a numeric value representing the stock's price in the market. should be on first page with label 'Market price' or 'Current price'"
				},
				"rating": {
					"type": "string",
					"enum": ["Buy", "Hold", "Sell", "Reduce", "Add"]
				},
				"previousRating": {
					"type": "string",
					"enum": ["Buy", "Hold", "Sell", "Reduce", "No Change", "Add", "N/A"]
				},
				"upsideDownside": {
					"type": "number"
				},
				"authors": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
							"email": {
								"type": "string",
								"format": "email"
							},
							"phone": {
								"type": "string"
							}
						}
					}
				},
				"bulletPoints": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"summaryParagraphs": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"heading": {
								"type": "string"
							},
							"content": {
								"type": "string"
							}
						}
					}
				}
			}
		},
		"innerPagesParagraphs": {
			"paragraphs": {
				"type": "object",
				"properties": {
					"style": {
						"type": "string",
						"enum": [
							"page header",
							"chapter heading",
							"subheading 1",
							"subheading 2",
							"body text",
							"callout",
							"exhibit title",
							"exhibit source",
							"bullet level 1",
							"bullet level 2",
							"bullet level 3",
							"page footer",
							"footnote"
						]
					},
					"text": {
						"type": "string"
					}
				}
			}
		}
	}
}